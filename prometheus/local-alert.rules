groups:
- name: targets
  rules:
  - alert: monitor_service_down
    expr: up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Monitor service non-operational"
      description: "Service {{ $labels.instance }} is down."

- name: host
  rules:
  - alert: high_cpu_load
    expr: node_load1 > 1.5
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Server under high load"
      description: "Docker host is under high load, the avg load 1m is at {{ $value}}. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}."

  - alert: high_memory_load
    expr: (sum(node_memory_MemTotal_bytes) - sum(node_memory_MemFree_bytes + node_memory_Buffers_bytes + node_memory_Cached_bytes) ) / sum(node_memory_MemTotal_bytes) * 100 > 85
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Server memory is almost full"
      description: "Docker host memory usage is {{ humanize $value}}%. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}."

  - alert: high_storage_load
    expr: (node_filesystem_size_bytes{fstype="ext4"} - node_filesystem_free_bytes{fstype="ext4"}) / node_filesystem_size_bytes{fstype="ext4"}  * 100 > 85
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Server storage is almost full"
      description: "Docker host storage usage is {{ humanize $value}}%. Reported by instance {{ $labels.instance }} of job {{ $labels.job }}."

  - alert: high_disk_io
    expr: rate(node_disk_io_time_seconds_total[1m]) > 0.8
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "High disk I/O usage"
      description: "Disk I/O usage is {{ humanize $value }}% on {{ $labels.instance }}"

- name: containers
  rules:
  - alert: forgejo_down
    expr: absent(container_memory_usage_bytes{name=~".*forgejo.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Forgejo service down"
      description: "Forgejo container is down for more than 30 seconds."

  - alert: forgejo_high_cpu
    expr: sum(rate(container_cpu_usage_seconds_total{name=~".*forgejo.*"}[1m])) / count(node_cpu_seconds_total{mode="system"}) * 100 > 80
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: "Forgejo high CPU usage"
      description: "Forgejo CPU usage is {{ humanize $value}}%."

  - alert: forgejo_high_memory
    expr: sum(container_memory_usage_bytes{name=~".*forgejo.*"}) > 500000000
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Forgejo high memory usage"
      description: "Forgejo memory consumption is at {{ humanize $value}}."

  - alert: grafana_down
    expr: absent(container_memory_usage_bytes{name=~".*grafana.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Grafana service down"
      description: "Grafana container is down for more than 30 seconds."

  - alert: grafana_high_memory
    expr: sum(container_memory_usage_bytes{name=~".*grafana.*"}) > 300000000
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "Grafana high memory usage"
      description: "Grafana memory consumption is at {{ humanize $value}}."

  - alert: postgres_down
    expr: absent(container_memory_usage_bytes{name=~".*postgres.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "PostgreSQL service down"
      description: "PostgreSQL container is down for more than 30 seconds."

  - alert: postgres_high_memory
    expr: sum(container_memory_usage_bytes{name=~".*postgres.*"}) > 500000000
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: "PostgreSQL high memory usage"
      description: "PostgreSQL memory consumption is at {{ humanize $value}}."

  - alert: dex_down
    expr: absent(container_memory_usage_bytes{name=~".*dex.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Dex OIDC service down"
      description: "Dex container is down for more than 30 seconds."

  - alert: nginx_down
    expr: absent(container_memory_usage_bytes{name=~".*nginx.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Nginx proxy down"
      description: "Nginx container is down for more than 30 seconds."

  - alert: prometheus_down
    expr: absent(container_memory_usage_bytes{name=~".*prometheus.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Prometheus service down"
      description: "Prometheus container is down for more than 30 seconds."

  - alert: alertmanager_down
    expr: absent(container_memory_usage_bytes{name=~".*alertmanager.*"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Alertmanager service down"
      description: "Alertmanager container is down for more than 30 seconds."

- name: application_metrics
  rules:
  - alert: high_http_error_rate
    expr: rate(nginx_http_requests_total{status=~"4.."}[5m]) > 0.1
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: "High HTTP 4xx error rate"
      description: "HTTP 4xx error rate is {{ $value }} errors per second"

  - alert: high_response_time
    expr: histogram_quantile(0.95, rate(nginx_http_request_duration_seconds_bucket[5m])) > 2
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: "High response time"
      description: "95th percentile response time is {{ $value }} seconds"

- name: docker_swarm
  rules:
  - alert: service_replica_down
    expr: (docker_swarm_service_spec_replicas - docker_swarm_service_running_replicas) > 0
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: "Docker Swarm service replica down"
      description: "Service {{ $labels.service_name }} has {{ $value }} replica(s) down"

  - alert: node_unavailable
    expr: docker_swarm_node_availability != 1
    for: 1m
    labels:
      severity: critical
    annotations:
      summary: "Docker Swarm node unavailable"
      description: "Node {{ $labels.node_name }} is not available" 